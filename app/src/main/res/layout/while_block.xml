<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/while_block_background"
    android:paddingStart="@dimen/startAndEndBlockPadding"
    android:paddingTop="@dimen/topAndBottomBlockPadding"
    android:paddingEnd="15dp"
    android:paddingBottom="@dimen/topAndBottomBlockPadding">

    <TextView
        android:id="@+id/whileText"
        style="@style/blocksTextStyle"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/transparent"
        android:text="@string/whileBlockText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/conditionText"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />


    <TextView
        android:id="@+id/conditionText"
        style="@style/blocksTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"

        android:layout_marginStart="@dimen/blocksMargin"
        android:autofillHints=""
        android:background="@drawable/textfields_background"
        android:hint="@string/conditionHint"
        android:padding="2dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@id/whileText"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/condition"
        style="@style/blocksTextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:autofillHints=""
        android:background="@drawable/textfields_background"
        android:hint="@string/conditionHint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="30"
        android:maxLines="1"
        android:padding="2dp"
        android:singleLine="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/conditionText"
        app:layout_constraintEnd_toEndOf="@+id/conditionText"
        app:layout_constraintStart_toStartOf="@+id/conditionText"
        app:layout_constraintTop_toTopOf="@+id/conditionText"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>